<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141A31">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bckg8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_da"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="Title" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:riv_corner_radius="10dp"
                    tools:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tvLongDesc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_da"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/micolor5"
                    android:textSize="25sp"
                    tools:text="Species" />

                <TextView
                    android:id="@+id/tvLongDesc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/baloo_da"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/micolor5"
                    android:textSize="25sp"
                    tools:text="House" />

                <TextView
                    android:id="@+id/tvLongDesc3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_da"
                    android:textAllCaps="true"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/micolor5"
                    android:textSize="25sp"
                    tools:text="Gender" />
                <TextView
                    android:id="@+id/tvLongDesc4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_da"
                    android:textAllCaps="true"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/micolor5"
                    android:textSize="25sp"
                    tools:text="Date of birth" />
                <TextView
                    android:id="@+id/tvLongDesc5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/baloo_da"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:gravity="center"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/micolor5"
                    android:textSize="25sp"
                    tools:text="Ancestry" />
                <TextView
                    android:id="@+id/tvLongDesc6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_da"
                    android:paddingLeft="15dp"
                    android:textAllCaps="true"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:textColor="@color/micolor5"
                    android:textSize="25sp"
                    tools:text="Patronus" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pbConexion"
        style="?android:attr/progressBarStyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:indeterminateDuration="1500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>